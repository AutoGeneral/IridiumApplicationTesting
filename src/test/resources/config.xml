<profile>
    <browserstack>
        <accessToken>token</accessToken>
        <username>user</username>
    </browserstack>
    <settings>
		<!-- https://www.browserstack.com/automate/junit#configure-capabilities -->
		<desiredCapabilities enabled="true" group="Android,Mobile">
			<capability name="platform" value="ANDROID"/>
			<capability name="browserName" value="chrome"/>
			<capability name="device" value="Samsung Galaxy S7"/>
			<capability name="realMobile" value="false"/>
			<capability name="os_version" value="6.0"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="true" group="iPad,Mobile">
			<capability name="platform" value="MAC"/>
			<capability name="browserName" value="iPad"/>
			<capability name="device" value="iPad Pro"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="true" group="iPhone,Mobile">
			<capability name="browserName" value="iPhone"/>
			<capability name="platform" value="MAC"/>
			<capability name="device" value="iPhone 6S Plus"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="true" group="Edge,Desktop">
			<capability name="platform" value="WINDOWS"/>
			<capability name="browserName" value="edge"/>
			<capability name="browserstack.edge.enablePopups" value="true"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="true" group="Safari,Desktop">
			<capability name="platform" value="MAC"/>
			<capability name="browserName" value="safari"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
			<capability name="browserstack.safari.enablePopups" value="true"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="true" group="IE,Desktop">
			<capability name="platform" value="WIN8"/>
			<capability name="browserName" value="internet explorer"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
			<capability name="browserstack.ie.enablePopups" value="true"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="false" group="Firefox,Desktop">
			<capability name="platform" value="WIN8"/>
			<capability name="browserName" value="firefox"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="false" group="Chrome,Desktop">
			<capability name="platform" value="WIN8"/>
			<capability name="browserName" value="chrome"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
		<desiredCapabilities enabled="false" group="Opera,Desktop">
			<capability name="platform" value="WIN8"/>
			<capability name="browserName" value="opera"/>
			<capability name="browserstack.selenium_version" value="3.4.0"/>
		</desiredCapabilities>
    </settings>
    <urlMappings>
        <featureGroup name="Google">
            <urlMapping>
                <url name="default">https://google.com</url>
            </urlMapping>
        </featureGroup>
    </urlMappings>
</profile>
